{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TL Con Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/gtk/Debug/trafficlight.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "runToMain": true,
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Bash unter Windows – starten",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/gtk/Debug/trafficlight.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MSYSTEM",
                    "value": "UCRT64"
                }
            ],
            "externalConsole": false,
            "pipeTransport": {
                "debuggerPath": "gdb",
                "pipeProgram": "bash",
                "pipeArgs": [
                    "-c"
                ],
                "pipeCwd": ""
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Automatische Strukturierung und Einrückung für \"gdb\" aktivieren",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Disassemblierungsvariante auf Intel festlegen",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "runToMain": true,
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "name": "JLink Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./bin/executable.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink"
        },
        {
            "name": "trafficlight (picoprobe)",
            "cwd": "${workspaceRoot}",
            "executable": "./Build/Pico_Make/trafficlight.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:HOME}/Projects/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "name": "systicktst (picoprobe)",
            "cwd": "${workspaceRoot}",
            "executable": "./Build/Pico_Make/systicktst.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:HOME}/Projects/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}