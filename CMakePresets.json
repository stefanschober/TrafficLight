{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dft_",
      "hidden": true,
      "displayName": "Default Config",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/Build/default",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QV"
        },
        "CMAKE_CONFIGURATION_TYPES": {
          "type": "STRING",
          "value": "Debug;Release;Spy"
        },
        "CONFIG_GUI": "ON"
      }
    },
    {
      "name": "local",
      "inherits": "dft_",
      "displayName": "Default",
      "description": "Build for local system",
      "binaryDir": "${sourceDir}/Build/local"
    },
    {
      "name": "con",
      "inherits": "dft_",
      "displayName": "Default Console",
      "description": "Build for local console system",
      "binaryDir": "${sourceDir}/Build/console",
      "cacheVariables": {
        "CONFIG_GUI": "OFF",
        "CONFIG_QF_CON": "ON"
      }
    },
    {
      "name": "unitTest",
      "inherits": "dft_",
      "displayName": "Default",
      "description": "Build for unit testing on local system with qunittest",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/qutest",
      "cacheVariables": {
        "CONFIG_UNIT_TEST": "ON",
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Spy"
        }
      }
    },
    {
      "name": "gtk",
      "inherits": "dft_",
      "displayName": "Build with GTK+3 GUI",
      "description": "Build for local GTK+3 system",
      "binaryDir": "${sourceDir}/Build/gtk",
      "cacheVariables": {
        "CONFIG_GTK": "ON"
      }
    },
    {
      "name": "pico",
      "inherits": "dft_",
      "displayName": "Pico config",
      "description": "Build for Raspberry Pi Pico",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/pico",
      "cacheVariables": {
        "PORT": {
          "type": "STRING",
          "value": "arm-cm"
        },
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        },
        "CONFIG_GUI": "OFF",
        "CONFIG_PICO": "ON"
      }
    },
    {
      "name": "picoQK",
      "inherits": "pico",
      "displayName": "Pico QK config",
      "description": "Build for Raspberry Pi Pico with QK kernel",
      "binaryDir": "${sourceDir}/Build/picoQK",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    },
    {
      "name": "pico2",
      "inherits": "pico",
      "displayName": "Pico2 config",
      "description": "Build for Raspberry Pi Pico2 with QV kernel",
      "binaryDir": "${sourceDir}/Build/pico2",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        },
        "PICO_BOARD": {
          "type": "STRING",
          "value": "pico2"
        }
      }
    },
    {
      "name": "pico2QK",
      "inherits": "pico2",
      "displayName": "Pico2 QK config",
      "description": "Build for Raspberry Pi Pico2 with QK kernel",
      "binaryDir": "${sourceDir}/Build/picoQK2",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    },
    {
      "name": "win32",
      "inherits": "dft_",
      "displayName": "MinGW config",
      "description": "Build for MinGW/Win32",
      "binaryDir": "${sourceDir}/Build/win32",
      "toolchainFile": "${sourceDir}/toolchain/tc_mingwgcc.cmake"
    },
    {
      "name": "win32QK",
      "inherits": "win32",
      "displayName": "MinGW/Win32 config with QK kernel",
      "description": "Build for MinGW/Win32 with QK kernel",
      "binaryDir": "${sourceDir}/Build/win32QK",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    },
    {
      "name": "win32GTK",
      "inherits": "win32",
      "displayName": "MinGW/Win32 config with QK kernel",
      "description": "Build for MinGW/Win32 with QK kernel",
      "binaryDir": "${sourceDir}/Build/win32GTK",
      "cacheVariables": {
        "CONFIG_GTK": "ON"
      }
    },
    {
      "name": "arm_",
      "hidden": true,
      "inherits": "dft_",
      "toolchainFile": "${sourceDir}/toolchain/tc_armgnu.cmake",
      "cacheVariables": {
          "CONFIG_GUI": "OFF"
      }
    },
    {
      "name": "arm",
      "inherits": "arm_",
      "displayName": "Embedded config for Arm-CM",
      "description": "Build for arm-cm",
      "binaryDir": "${sourceDir}/Build/arm"
    },
    {
      "name": "armQK",
      "inherits": "arm",
      "description": "Build for arm-cm, kernel QK",
      "binaryDir": "${sourceDir}/Build/armQK",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dft_",
      "hidden": true,
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "local",
      "inherits": "dft_",
      "configurePreset": "local"
    },
    {
      "name": "con",
      "inherits": "dft_",
      "configurePreset": "con"
    },
    {
      "name": "qutest",
      "inherits": "dft_",
      "configurePreset": "unitTest"
    },
    {
      "name": "gtk",
      "inherits": "dft_",
      "configurePreset": "gtk"
    },
    {
      "name": "win32",
      "inherits": "dft_",
      "configurePreset": "win32"
    },
    {
      "name": "win32QK",
      "inherits": "dft_",
      "configurePreset": "win32QK"
    },
    {
      "name": "win32GTK",
      "inherits": "dft_",
      "configurePreset": "win32GTK"
    },
    {
      "name": "armdft_",
      "hidden": true,
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "arm",
      "inherits": "armdft_",
      "configurePreset": "arm"
    },
    {
      "name": "armQK",
      "inherits": "armdft_",
      "configurePreset": "armQK"
    },
    {
      "name": "pico",
      "configurePreset": "pico"
    },
    {
      "name": "picoQK",
      "configurePreset": "picoQK"
    },
    {
      "name": "pico2",
      "configurePreset": "pico2"
    },
    {
      "name": "pico2QK",
      "configurePreset": "pico2QK"
    }
  ],
  "vendor": {
    "example.com/TrafficLight/V1.0": {
      "author": "Stefan Schober",
      "releaseDate": "2024-01-03"
    }
  }
}