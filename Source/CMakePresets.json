{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
        {
            "name": "gen",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": {
                    "type": "STRING",
                    "value": "DEBUG;RELEASE;SPY"
                }
            }
        },
        {
            "name": "qv",
            "hidden": true,
            "cacheVariables": {
                "CONFIG_KERNEL": {
                    "type": "STRING",
                    "value": "QV"
                }
            }
        },
        {
            "name": "qk",
            "hidden": true,
            "cacheVariables": {
                "CONFIG_KERNEL": {
                    "type": "STRING",
                    "value": "QK"
                }
            }
        },
        {
            "name": "local",
            "hidden": true,
            "inherits": "gen",
            "cacheVariables": {
                "CONFIG_GUI": "ON"
            }
        },
        {
            "name": "mingw",
            "hidden": true,
            "inherits": "gen",
            "toolchainFile": "${sourceParentDir}/toolchain/tc_mingwgcc.cmake",
            "cacheVariables": {
                "CONFIG_GUI": "ON"
            }
        },
        {
            "name": "raspi",
            "hidden": true,
            "inherits": "gen",
            "toolchainFile": "${sourceParentDir}/toolchain/tc_gnuarmhf.cmake",
            "cacheVariables": {
                "CONFIG_GUI": "ON"
            }
        },
        {
            "name": "arm",
            "hidden": true,
            "inherits": "gen",
            "toolchainFile": "${sourceParentDir}/toolchain/tc_gnuarm.cmake",
            "cacheVariables": {
                "CONFIG_GUI": "OFF"
            }
        },
        {
            "name": "pi-pico",
            "hidden": true,
            "inherits": "arm",
            "cacheVariables": {
                "CONFIG_GUI": "OFF",
                "CONFIG_PICO": "ON",
                "CONFIG_PICO_CMSIS": "ON",
                "CONFIG_CORTEX_M0plus": "ON"
            }
        },
        {
            "name": "local-qv",
            "inherits": [
                "local",
                "qv"
            ],
            "displayName": "Local QV",
            "description": "Local build with QV kernel",
            "binaryDir": "${sourceParentDir}/Build/local/qv"
        },
        {
            "name": "local-qk",
            "inherits": [
                "local",
                "qk"
            ],
            "displayName": "Local QK",
            "description": "Local build with QK kernel",
            "binaryDir": "${sourceParentDir}/Build/local/qk"
        },
        {
            "name": "mingw-qv",
            "inherits": [
                "mingw",
                "qv"
            ],
            "displayName": "MinGW QV",
            "description": "Build for MinGW with QV kernel",
            "binaryDir": "${sourceParentDir}/Build/mingw/qv"
        },
        {
            "name": "mingw-qk",
            "inherits": [
                "mingw",
                "qk"
            ],
            "displayName": "MinGW QK",
            "description": "Build for MinGW with QK kernel",
            "binaryDir": "${sourceParentDir}/Build/mingw/qk"
        },
        {
            "name": "raspi-qv",
            "inherits": [
                "raspi",
                "qv"
            ],
            "displayName": "Raspberry Pi QV",
            "description": "Build for Raspberry Pi with QV kernel",
            "binaryDir": "${sourceParentDir}/Build/raspi/qv"
        },
        {
            "name": "raspi-qk",
            "inherits": [
                "raspi",
                "qk"
            ],
            "displayName": "Raspberry Pi QK",
            "description": "Build for Raspberry Pi with QK kernel",
            "binaryDir": "${sourceParentDir}/Build/raspi/qk"
        },
        {
            "name": "arm-qv",
            "inherits": [
                "arm",
                "qv"
            ],
            "displayName": "Arm Cortex-M QV",
            "description": "Build for Arm Cortex-M with QV kernel",
            "binaryDir": "${sourceParentDir}/Build/arm/qv"
        },
        {
            "name": "arm-qk",
            "inherits": [
                "arm",
                "qk"
            ],
            "displayName": "Arm Cortex-M QK",
            "description": "Build for Arm Cortex-M with QK kernel",
            "binaryDir": "${sourceParentDir}/Build/arm/qk"
        },
        {
            "name": "pico-qv",
            "inherits": [
                "pi-pico",
                "qv"
            ],
            "displayName": "Raspberry Pi Pico QV",
            "description": "Build for Raspberry Pi Pico with QV kernel",
            "binaryDir": "${sourceParentDir}/Build/pico/qv"
        },
        {
            "name": "pico-qk",
            "inherits": [
                "pi-pico",
                "qk"
            ],
            "displayName": "Raspberry Pi Pico QK",
            "description": "Build for Raspberry Pi Pico with QK kernel",
            "binaryDir": "${sourceParentDir}/Build/pico/qk"
        }
    ],
  "buildPresets": [
        {
            "name": "default",
            "hidden": true,
            "jobs": 4
        },
        {
            "name": "mingw-qv",
            "inherits": "default",
            "configurePreset": "mingw-qv"
        },
        {
            "name": "mingw-qk",
            "inherits": "default",
            "configurePreset": "mingw-qk"
        },
        {
            "name": "raspi-qv",
            "inherits": "default",
            "configurePreset": "raspi-qv"
        },
        {
            "name": "raspi-qk",
            "inherits": "default",
            "configurePreset": "raspi-qk"
        },
        {
            "name": "arm-qv",
            "inherits": "default",
            "configurePreset": "arm-qv"
        },
        {
            "name": "arm-qk",
            "inherits": "default",
            "configurePreset": "arm-qk"
        }
    ],
    "vendor": {
        "example.com/TrafficLight/V1.0": {
            "author": "Stefan Schober",
            "releaseDate": "2024-01-03"
        }
    }
}