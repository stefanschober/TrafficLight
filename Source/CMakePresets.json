{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Default Config",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceParentDir}/Build/default",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QV"
        },
        "CMAKE_CONFIGURATION_TYPES": {
          "type": "STRING",
          "value": "DEBUG;RELEASE;SPY"
        },
        "CONFIG_GUI": "ON"
      }
    },
    {
      "name": "mingw-qv",
      "inherits": "default",
      "displayName": "MinGW config",
      "description": "Build for MinGW",
      "binaryDir": "${sourceParentDir}/Build/mingw/qv",
      "toolchainFile": "${sourceParentDir}/toolchain/tc_mingwgcc.cmake"
    },
    {
      "name": "mingw-qk",
      "inherits": "mingw-qv",
      "displayName": "MinGW config with QK kernel",
      "description": "Build for MinGW with QK kernel",
      "binaryDir": "${sourceParentDir}/Build/mingw/qk",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    },
    {
      "name": "arm",
      "hidden": true,
      "inherits": "default",
      "toolchainFile": "${sourceParentDir}/toolchain/tc_gnuarm.cmake",
      "cacheVariables": {
          "CONFIG_KERNEL": {
            "type": "STRING",
            "value": "QV"
          },
          "CONFIG_GUI": "OFF"
      }
    },
    {
      "name": "arm-qv",
      "inherits": "arm",
      "displayName": "Embedded config for Arm-CM",
      "description": "Build for arm-cm",
      "binaryDir": "${sourceParentDir}/Build/arm/qv"
    },
    {
      "name": "arm-qk",
      "inherits": "arm",
      "description": "Build for arm-cm, kernel QK",
      "binaryDir": "${sourceParentDir}/Build/arm/qk",
      "cacheVariables": {
        "CONFIG_KERNEL": {
          "type": "STRING",
          "value": "QK"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "configurePreset": "default",
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "mingw-qv",
      "inherits": "default",
      "configurePreset": "mingw-qv"
    },
    {
      "name": "mingw-qk",
      "inherits": "default",
      "configurePreset": "mingw-qk"
    },
    {
      "name": "armdft",
      "hidden": true,
      "configurePreset": "arm",
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "arm-qv",
      "inherits": "armdft",
      "configurePreset": "arm-qv"
    },
    {
      "name": "arm-qk",
      "inherits": "armdft",
      "configurePreset": "arm-qk"
    }
  ],
  "vendor": {
    "example.com/TrafficLight/V1.0": {
      "author": "Stefan Schober",
      "releaseDate": "2024-01-03"
    }
  }
}